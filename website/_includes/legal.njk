---
layout: base.njk
---

<!-- Navigation -->
{% include "navbar.njk" %}

<!-- Main Content -->
<main class="flex-grow p-4 md:p-8">
  <div class="container mx-auto px-4 py-8 max-w-4xl mt-8">
    <h1 class="text-3xl font-bold mb-6">{{ title }}</h1>
    
<div class="prose prose-lg max-w-none prose-ul:list-disc prose-ul:pl-6 prose-li:marker:text-primary-500 prose-ol:list-decimal prose-ol:pl-6 prose-li:pl-2">
      {{ content | safe }}
      
      <p class="mt-8 text-sm text-gray-600">Last updated: {{ lastUpdated or "January 24, 2025" }}</p>
    </div>
  </div>
</main>

<!-- Footer -->
<footer class="bg-white border-t border-gray-200 py-4 px-6 text-center text-sm text-gray-600">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row justify-center items-center gap-4">
            <div>Â© 2025 RdRx. All rights reserved.</div>
            <div class="flex gap-4">
                <a href="/terms/" class="{% if page.url == '/terms/' %}font-medium text-primary-500 hover:text-primary-600{% else %}hover:text-primary-500{% endif %} transition-colors duration-200">Terms of Service</a>
                <a href="/privacy/" class="{% if page.url == '/privacy/' %}font-medium text-primary-500 hover:text-primary-600{% else %}hover:text-primary-500{% endif %} transition-colors duration-200">Privacy Policy</a>
            </div>
        </div>
    </div>
</footer>
